<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtValorAngulo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_weight="1"
        android:text="Valor do Ã‚ngulo"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rbSeno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:text="Seno" />

    <RadioButton
        android:id="@+id/rbCosseno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rbSeno"
        android:layout_centerHorizontal="true"
        android:text="Cosseno" />

    <RadioButton
        android:id="@+id/rbTang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edtValorAngulo"
        android:layout_alignTop="@+id/rbSeno"
        android:text="Tangente" />

    <EditText
        android:id="@+id/edtValorAngulo"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/rbCosseno"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="Calcular" />

</RelativeLayout>